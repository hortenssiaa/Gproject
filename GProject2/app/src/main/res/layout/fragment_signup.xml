<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FF273238"
    android:id="@+id/fragment_singup">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginBottom="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:gravity="center"
            android:text="회원가입"
            android:textColor="#FFFFFFFF"
            android:textSize="50sp"
            android:textStyle="bold" />
    </LinearLayout>

    <Button
        android:id="@+id/fb_signupb"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/layer_rounding_box_fb"
        android:layout_marginTop="12dp"
        android:onClick="signupBt_onClick"
        android:text="페이스북으로 시작하기"
        android:textColor="#FFFFFF"/>

    <Button
        android:id="@+id/kakao_signupb"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/layer_rounding_box_kakao"
        android:layout_marginTop="12dp"
        android:onClick="signupBt_onClick"
        android:text="카카오톡으로 시작하기"
        android:textColor="#000000"/>

    <Button
        android:id="@+id/naver_signupb"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/layer_rounding_box_naver"
        android:layout_marginTop="12dp"
        android:onClick="signupBt_onClick"
        android:text="네이으로 시작하기"
        android:textColor="#FFFFFF"/>

    <Button
        android:id="@+id/email_signupb"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/layer_rounding_box_email"
        android:layout_marginTop="12dp"
        android:onClick="signupBt_onClick"
        android:text="이메일로 시작하기"
        android:textColor="#000000"/>

</LinearLayout>