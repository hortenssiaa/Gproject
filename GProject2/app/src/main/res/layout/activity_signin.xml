<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#273238">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="360dp"
        android:layout_marginBottom="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:gravity="center"
            android:text="로그인"
            android:textColor="#FFFFFFFF"
            android:textSize="50sp"
            android:textStyle="bold" />
    </LinearLayout>

    <Button
        android:id="@+id/fb_signin"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="#4267B2"
        android:layout_marginTop="10dp"
        android:text="페이스북으로 로그인하기"
        android:textColor="#FFFFFF"/>

    <Button
        android:id="@+id/kako_signin"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="#FAE101"
        android:layout_marginTop="10dp"
        android:text="카카오톡으로 로그인하기"
        android:textColor="#000000"/>

    <Button
        android:id="@+id/naver_signin"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="#03CF5D"
        android:layout_marginTop="10dp"
        android:text="네이로 로그인하기"
        android:textColor="#FFFFFF"/>
버
    <Button
        android:id="@+id/email_signin"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="#FFFFFF"
        android:layout_marginTop="10dp"
        android:text="이메일로 로그인하기"
        android:textColor="#000000"/>

</LinearLayout>