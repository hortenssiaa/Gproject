<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="#FFFFFFFF"
    app:cardCornerRadius="10dp"
    app:cardElevation="5dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:id="@+id/layout3_1"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageview3_cardV"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:onClick="cardview_onClick3"
            app:srcCompat="@mipmap/ic_launcher_round"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right">

            <TextView
                android:id="@+id/textView3_card1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:paddingTop="10dp"
                android:paddingLeft="10dp"
                android:text="장소/그룹 이름"
                android:onClick="cardview_onClick3"
                android:textColor="#5E5E5E"
                android:textStyle="bold"
                android:textSize="25sp"/>

            <TextView
                android:id="@+id/textView3_card2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_marginLeft="45dp"
                android:layout_marginRight="5dp"
                android:text="운동그룹"
                android:onClick="cardview_onClick3"
                android:textColor="#9F9F9F"
                android:textStyle="bold"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/textView3_card2_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_marginRight="15dp"
                android:text="종목"
                android:onClick="cardview_onClick3"
                android:textColor="#9F9F9F"
                android:textStyle="bold"
                android:textSize="15sp"/>
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView3_card3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="75dp"
            android:layout_marginTop="52dp"
            android:layout_gravity="center"
            android:text="주소"
            android:onClick="cardview_onClick3"
            android:textColor="#9F9F9F"
            android:textSize="15sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView3_card4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="11dp"
                android:layout_marginTop="3dp"
                android:layout_gravity="center"
                android:text="시간"
                android:onClick="cardview_onClick3"
                android:textColor="#9F9F9F"
                android:layout_marginBottom="7dp"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/textView3_card5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="11dp"
                android:layout_marginTop="3dp"
                android:layout_gravity="center"
                android:text="요일"
                android:onClick="cardview_onClick3"
                android:textColor="#9F9F9F"
                android:layout_marginBottom="7dp"
                android:textSize="15sp"/>
         </LinearLayout>




        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginBottom="7dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/mapbutton3_card6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:layout_gravity="right"
                android:gravity="center"
                android:background="#FFFFFFFF"
                android:text="지도에서 보기"
                android:textStyle="bold"
                android:textColor="#4ABECA"
                android:textSize="16sp"/>

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>